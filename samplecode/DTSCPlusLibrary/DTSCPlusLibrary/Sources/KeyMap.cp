ode(x,y) (BitTst(&(x), (y) ^ 0x07))#pragma segment KeyMapBoolean TKeyMap::IsKeyDown(unsigned short key)// Return true if key defined is down.{	::GetKeys(fKeyMap);							// get info	return (KeyCode(fKeyMap, key));}// _________________________________________________________________________________________________________ ///*	Change History (most recent last):  No		Init.	Date		Comment  1			khs		9/20/92		New file*/