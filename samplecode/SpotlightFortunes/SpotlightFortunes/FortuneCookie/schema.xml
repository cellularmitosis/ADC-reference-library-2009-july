<?xml version="1.0" encoding="UTF-8"?>
 
<schema version="1.0" xmlns="http://www.apple.com/metadata"
                      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                      xsi:schemaLocation="http://www.apple.com/metadata file:///System/Library/Frameworks/CoreServices.framework/Frameworks/Metadata.framework/Resources/MetadataSchema.xsd">

    <attributes>
        <attribute name="com_example_fortuneID" multivalued="false" type="CFString"/>
    </attributes>

    <types>
        <type name="com.example.fortune-cookie">  <!-- add one <type>...</type> entry for each UTI that you need to define.
         
            <!-- 'allattrs' is a whitespace separated list of all of the attributes that this UTI type normally has.
                 It does not have to be exhaustive. -->
            <allattrs>
                com_example_fortuneID
                kMDItemTimestamp
                kMDItemDisplayName
                kMDItemTextContent
            </allattrs>
            <!-- 'displayattrs' is a whitespace separated list of the attributes that should normally be displayed when previewing files of this UTI type. -->
            <displayattrs>
                kMDItemDisplayName
            </displayattrs>
            
        </type>
    </types>
</schema>

