ACE#pragma segment Soundvoid TSound::Play()// Play the selected sound.{	if (fSoundHandle != NULL)					// we have a valid snd handle	{		fError = ::SndPlay(NULL, (SndListHandle)fSoundHandle, false);// play synchronously		VASSERT(fError == noErr, ("Problems with SndPlay = %d\n", fError));	}}// _________________________________________________________________________________________________________ ///*	Change History (most recent last):  No		Init.	Date		Comment  1			khs		12/21/92	New file  2			khs		1/14/93		Cleanup*/